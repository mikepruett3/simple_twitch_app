{
"update_url": "https://clients2.google.com/service/update2/crx",

  "content_scripts": [{
    "all_frames": true,
    "js": ["run.js"],
    "matches": ["*://*.twitch.tv/*"],
    "exclude_matches": [
      "*://*.twitch.tv/*.html",
      "*://*.twitch.tv/*.html?*",
      "*://*.twitch.tv/*.htm",
      "*://*.twitch.tv/*.htm?*"
    ]
  }],
  "web_accessible_resources": ["betterttv.js", "betterttv.css"],
  "permissions": ["*://*.twitch.tv/*"],
  "optional_permissions": ["*://*.youtube.com/*"],
  "externally_connectable": {
    "matches": ["*://*.twitch.tv/*"]
  },
  "description": "BetterTTV enhances Twitch with new features, emotes, and more.",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_popup": "settings.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "name": "BetterTTV",
  "short_name": "BTTV",
  "homepage_url": "https://betterttv.com",
  "version": "7.4.21"
}
